<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 圆角 -->
    <corners
        android:radius="180dp"
       />
    <!-- 渐变色  android:centerColor="@color/red" 中间色 -->
    <gradient
        android:angle="90"
        android:endColor="@color/bg_gray_white_color"
        android:startColor="@color/bg_gray_white_color" />
    <!-- 描边 -->
    <stroke
        android:dashGap="0dp"
        android:dashWidth="0dp"
        android:color="@color/bg_gray"
        android:width="1dp" >
    </stroke>

</shape>