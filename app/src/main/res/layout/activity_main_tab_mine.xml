<com.zhishen.soft.happy.widget.InterceptLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/bg_gray_white_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="@color/bg_common_green_color"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="HR姓名"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="公司名称"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tab_my_item1"
                    android:text="公司简介"
                    android:drawableLeft="@drawable/ic_tab_my_renzheng"
                    style="@style/main_tv_my_tab_style"
                    />
                <View
                    style="@style/divider_horizontal_style"/>

                <TextView
                    android:id="@+id/tv_tab_my_item2"
                    android:text="钱包"
                    android:drawableLeft="@drawable/ic_tab_my_renzheng"
                    style="@style/main_tv_my_tab_style"
                    />
                <View
                    style="@style/divider_horizontal_style"/>

                <TextView
                    android:id="@+id/tv_tab_my_item3"
                    android:text="认证"
                    android:drawableLeft="@drawable/ic_tab_my_renzheng"
                    style="@style/main_tv_my_tab_style"
                    />
                <View
                    style="@style/divider_horizontal_style"/>

                <TextView
                    android:id="@+id/tv_tab_my_item4"
                    android:text="帮助与反馈"
                    android:drawableLeft="@drawable/ic_tab_my_renzheng"
                    style="@style/main_tv_my_tab_style"
                    />
                <View
                    style="@style/divider_horizontal_style"/>

                <TextView
                    android:id="@+id/tv_tab_my_item5"
                    android:text="在线客服"
                    android:drawableLeft="@drawable/ic_tab_my_renzheng"
                    style="@style/main_tv_my_tab_style"
                    />
                <View
                    style="@style/divider_horizontal_style"/>


                <View
                    android:layout_marginTop="30dp"
                    style="@style/divider_horizontal_style"/>
                <Button
                    android:id="@+id/btn_login_login"
                    android:text="安全退出"
                    android:textSize="@dimen/h3"
                    android:layout_height="48dp"
                    android:textColor="@color/red"
                    style="@style/btn_common_red_style"
                    android:background="@drawable/bg_white_selector"
                    />
                <View
                    style="@style/divider_horizontal_style"/>

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:background="@drawable/white_corners"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="65dp"
            android:layout_width="85dp"
            android:layout_height="85dp">

            <ImageView
                android:src="@drawable/ic_default_head_old"
                android:layout_width="84dp"
                android:layout_height="84dp" />
        </FrameLayout>

    </FrameLayout>

</com.zhishen.soft.happy.widget.InterceptLinearLayout>
