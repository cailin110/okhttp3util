<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

    </style>
    <style name="AppTheme2" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="TextWidgetPullAction">
        <item name="android:textColor">@color/tab_color_default</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PullToRefreshCommon">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">0dp</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="divider_horizontal_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_gray</item>
    </style>
    <style name="divider_horizontal2_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/divider_common</item>
    </style>
    <style name="divider_vertical_style" >
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_gray</item>
    </style>


    <style name="main_tab_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/tab_color_default</item>
        <item name="android:background">@drawable/bg_common_selector</item>
    </style>

    <style name="head_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/head_title</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="main_head_iv_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="main_head_iv_left_btn_style" parent="@style/main_head_iv_btn_style">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="main_tv_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/bg_common_black_color</item>
        <item name="android:background">@drawable/bg_white_selector</item>
    </style>


    <style name="main_tv_my_tab_style" parent="main_tv_common_style">
        <item name="android:drawableRight">@drawable/ic_common_arrow_right</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textSize">@dimen/h3_1</item>
    </style>

    <style name="btn_red_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_common_red_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/font_white_black_change_selector</item>
        <item name="android:textSize">@dimen/h4</item>
    </style>

    <style name="btn_common_red_style" parent="btn_red_style" >
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>


    <style name="et_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorHint">@color/bg_common_green_tran3_color</item>
        <item name="android:textColor">@color/bg_common_black</item>
    </style>
    <style name="et_common_login_style" parent="et_common_style">
        <item name="android:textSize">@dimen/h3_1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="tv_send_style_dlg" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textColor">@color/bg_common_green_color</item>
        <item name="android:background">@drawable/blue_common_corners</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginRight">8dp</item>

    </style>


    <style name="tv_index_item_area" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="tv_index_item_left" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="tv_index_item_right" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tip_light</item>
        <item name="android:drawablePadding">8dp</item>
    </style>





</resources>
